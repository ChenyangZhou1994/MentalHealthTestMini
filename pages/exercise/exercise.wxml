<view style="height:80vh;">
  <view class="my-bar margin text-xl"></view>
  <view class="page-section">
    <view class="weui-cells__title">请在下面写出你最近想说的话(字数限制200字)</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" maxlength="200" type="text" placeholder="最大输入长度为200" bindinput="bindTxt" value="{{sentence}}"/>
      </view>
    </view>
  </view>
</view>


<view class="cu-bar bg-white fixed-bottom">
  <view class="radius fr padding">
    <button class="cu-btn bg-red round shadow-blur" style="width:200rpx;height:80rpx;" bindtap="submit">提交</button>
  </view>
</view>